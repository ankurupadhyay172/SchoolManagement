<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splaxe"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="74.7dp"
            android:layout_height="74.7dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_logo" />

        <TextView
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="12.7dp"
            android:textColor="@android:color/white"
            android:text="School Management"
            android:textStyle="bold"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/dataid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/loginstudent"
            android:layout_width="wrap_content"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_white"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:layout_width="14dp"
                android:layout_height="17dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="1dp"
                android:textSize="12sp"
                android:text="  Parents / Student"
                android:textColor="#3b3b3b" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/faculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:paddingLeft="38dp"
            android:paddingRight="38dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/rect_white"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:layout_width="12dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:textSize="12sp"
                android:text="Continue As Teacher"
                android:textColor="#3b3b3b" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <View
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="#33ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:text="or"
                android:textColor="#99ffffff"
                android:textSize="10sp" />

            <View
                android:layout_width="50dp"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:background="#33ffffff" />


        </LinearLayout>



        <TextView
            android:id="@+id/admin"

            android:background="@drawable/rect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="55dp"
            android:paddingRight="55dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="13dp"
            android:text="Admin"
            android:textSize="12sp"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trouble in"
                android:textSize="11.5sp"
                android:textColor="#B3ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login now?"
                android:layout_marginLeft="9dp"
                android:textSize="11.5sp"
                android:textColor="#ffffff"/>

        </LinearLayout>






    </LinearLayout>


</RelativeLayout>
