<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rect_white_dark"
    android:orientation="vertical">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/rect_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29.3dp"
        android:layout_marginTop="38dp"
        android:letterSpacing="0.0425"
        android:fontFamily="@font/sfpro_display_bold"
        android:text="Choose option"
        android:textColor="@color/blacklight"
        android:textSize="16.7sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29.3dp"
        android:layout_marginTop="5dp"
        android:letterSpacing="0.0425"
        android:fontFamily="@font/sf_pro_display_medium"
        android:text="choose option want to send"
        android:textColor="@color/graydark"
        android:textSize="12.7sp" />


    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="gone"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_menu_camera"
                android:layout_width="50dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="Camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/gallery"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_gallery_new"
                android:layout_width="50dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="Gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>






        <LinearLayout
            android:id="@+id/pdffile"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_pdffiles"
                android:layout_width="50dp"
                android:layout_height="30dp"/>

            <TextView
                android:text="Pdf file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/document"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_document"
                android:layout_width="50dp"
                android:layout_height="30dp"/>

            <TextView

                android:text="Document\n file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>