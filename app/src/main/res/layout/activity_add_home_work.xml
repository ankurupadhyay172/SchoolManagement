<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >



    <include layout="@layout/toolbar"/>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        app:cardCornerRadius="5dp"
        card_view:cardElevation="9dp"
        android:layout_marginRight="20dp"

        android:background="@drawable/round_border">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_border">





                    <Spinner
                        android:id="@+id/student_division"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner"
                        android:hint="Title"
                        android:padding="5dp"
                        android:textSize="13dp"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_border">





                    <Spinner

                        android:id="@+id/student_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner"
                        android:hint="Title"
                        android:padding="5dp"
                        android:textSize="13dp"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_border">





                    <Spinner
                        android:visibility="gone"
                        android:id="@+id/select_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner"
                        android:hint="Title"
                        android:padding="5dp"
                        android:textSize="13dp"/>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_border">





                    <Spinner
                        android:visibility="gone"
                        android:id="@+id/select_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner"
                        android:hint="Title"
                        android:padding="5dp"
                        android:textSize="13dp"/>

                </LinearLayout>








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_border">





                    <Spinner

                        android:id="@+id/student_class"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner"
                        android:hint="Title"
                        android:padding="5dp"
                        android:textSize="13dp"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_border">





                    <Spinner
                        android:id="@+id/student_subject"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner"
                        android:hint="Title"
                        android:padding="5dp"
                        android:textSize="13dp"/>

                </LinearLayout>










                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_border">





                    <Spinner

                        android:id="@+id/student_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spinner"
                        android:hint="Title"
                        android:padding="5dp"
                        android:textSize="13dp"/>

                </LinearLayout>













                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/round_border">




                    <EditText
                        android:id="@+id/homework"

                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLines="3"
                        android:lines="5"
                        android:gravity="top|left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:hint="HomeWork"

                        android:padding="10dp"
                        android:textSize="20sp" />

                   
                </LinearLayout>















                <TextView

                    android:id="@+id/send"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Add Home Work"
                    android:textAllCaps="false"
                    android:layout_marginTop="30dp"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </ScrollView>
    </androidx.cardview.widget.CardView>






</LinearLayout>